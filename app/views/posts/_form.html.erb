
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.date_select :date %>

  <%= f.label :body %>
  <%= f.text_area :body %>
  
  <%= f.label :completed, 'Complete', :value => true %>
  <%= f.radio_button :completed, true %>
  <%= f.label :completed, 'Incomplete', :value => false %>
  <%= f.radio_button :completed, false %>
  <%= f.submit %>

<% end %>