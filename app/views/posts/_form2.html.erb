<%= form_for @post do |f| %>
<div class="field">
  <label class="label">
  <%= f.label :title %></label>
  <div class="control">
  <input class="input" type="text" placeholder=<%= f.text_field :title %>
  </div>
</div>

 <div class="field">
 <label class="label">Date</label>
 <p class="control">
<span class="select">
  <%= f.date_select :date, date_separator: '</div><div class="select">' %>
</span>
</p>
</div>

<div class="field">
  <label class="label">Description</label>
  <div class="control">
    <textarea class="textarea" placeholder=<%= f.text_area :body %></textarea>
  </div>
</div>


<div class="field">
  <div class="control">
    <label class="radio">Completed? </label>
      <name="question"> <%= f.radio_button :completed, true %></input>
      Yes
    <label class="radio">
      <name="question"> <%= f.radio_button :completed, false %></input>
      No
  </div>
</div>

<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
  <div class="control">
    <button class="button is-text"><%= link_to 'Cancel', posts_path %></button>
</div>
<br />
<% end %>